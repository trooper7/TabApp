<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.tabapp.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="horizontal">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50">

            <TextView
                android:id="@+id/pin_admin_txt"
                android:text="@string/pin_admin_txt"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_admin"
                android:inputType="text" />

            <EditText
                android:id="@+id/pin_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pin_admin"
                android:inputType="numberPassword"/>


            <Button
                android:id="@+id/ok_btn"
                android:text="@string/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pin_user_txt"
            android:text="@string/pin_user_txt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_txt2"
            android:hint="@string/name_user"
            android:inputType="text" />

        <EditText
            android:id="@+id/pin_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pin_user"
            android:inputType="numberPassword"/>

        <Button
            android:id="@+id/cancel_btn"
            android:text="@string/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>
